<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="820" Width="1440"
        MouseLeftButtonDown="Grid_MouseLeftButtonDown"
        Background="{DynamicResource BackgroundBrush}">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0"
                      GlassFrameThickness="-1"
                      ResizeBorderThickness="5" />
    </WindowChrome.WindowChrome>
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <!-- 标题蓝 -->
        <Border Grid.Row="0"  >
            <Grid Margin="47 0" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="39"></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>

                <Grid Grid.Row="1" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <!-- LOGO -->
                    <StackPanel Grid.Column="0" 
                            Orientation="Horizontal" >
                        <Image Width="54">
                            <Image.Source>
                                <DrawingImage Drawing="{StaticResource LogoSvg}"></DrawingImage>
                            </Image.Source>
                        </Image>
                        <TextBlock Margin="24 0 0 0"
                               FontFamily="{StaticResource HOS_Medium}"
                               FontSize="36"
                               FontWeight="Bold"
                               VerticalAlignment="Center" Width="195">
                        Power Lite
                        </TextBlock>
                    </StackPanel>
                    <!-- 选择按钮 -->
                    <StackPanel Grid.Column="1" 
                            Orientation="Horizontal"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center">
                        <RadioButton Width="70" Height="43" 
                                 FontSize="18"
                                 Style="{StaticResource ChooseButton}" IsChecked="True">EX30</RadioButton>
                        <TextBlock Width="24"/>
                        <RadioButton Width="70" Height="43" 
                                 FontSize="18"
                                 Style="{StaticResource ChooseButton}">EX90</RadioButton>
                        <TextBlock Width="24"/>
                        <RadioButton Width="70" Height="43" 
                                 FontSize="18"
                                 Style="{StaticResource ChooseButton}">XC40</RadioButton>
                    </StackPanel>
                    <!-- 关闭按钮 -->
                    <StackPanel Grid.Column="2" 
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            >
                        <Button Width="43" 
                            Height="43"
                            FontSize="24"
                            FontWeight="Bold"
                            Content="&#xe650;"
                            Style="{StaticResource WindowsButton}" Click="Button_Click" >
                        </Button>
                        <Button Width="43" 
                            Height="43"
                            FontSize="24"
                            FontWeight="Bold"
                            Margin="10 0 0 0"
                            Content="&#xe607;"
                            x:Name="btnWindowsStatusChange"
                            Style="{StaticResource WindowsButton}" Click="Button_Click_1">
                        </Button>
                        <Button Width="43" 
                            Height="43"
                            FontSize="24"
                            FontWeight="Bold"
                            Margin="10 0 0 0"
                            Content="&#xe695;"
                            Style="{StaticResource WindowsButton}" Click="Button_Click_2">
                        </Button>
                    </StackPanel>
                </Grid>
            </Grid>

        </Border>

        <!-- 中间栏 -->
        <Grid Grid.Row="1" Margin="50 100 50 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="109"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition Width="109"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="1">

                <!-- 文字 -->
                <StackPanel>
                    <TextBlock Text="Volvo EX30"
                               FontFamily="{StaticResource HOS_Medium}"
                               FontWeight="Bold"
                               FontSize="72"/>

                    <TextBlock Text="Fully electric crossver"
                               Foreground="{DynamicResource ChooseBrush}"
                               FontFamily="{StaticResource HOS_Medium}"
                               FontSize="28"
                               FontWeight="Medium"/>
                    <Border Background="{DynamicResource NormalBrush}"
                            HorizontalAlignment="Left"
                            CornerRadius="20"
                            Margin="0 10 0 0"
                            Height="42" Width="162">
                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                            <RadioButton Width="40" Height="40" FontSize="24" Style="{StaticResource DirectionButton}" IsChecked="True" Content="L"/>
                            <RadioButton Width="40" Height="40" FontSize="24" Style="{StaticResource DirectionButton}" Content="R"/>
                            <RadioButton Width="40" Height="40" FontSize="24" Style="{StaticResource DirectionButton}" Content="F"/>
                            <RadioButton Width="40" Height="40" FontSize="24" Style="{StaticResource DirectionButton}" Content="B"/>
                        </StackPanel>
                    </Border>
                    
                </StackPanel>
                <!-- 复制按钮 -->
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Right">
                    <Button Style="{StaticResource CopyButton}" 
                            FontSize="24"
                            Width="42" 
                            Height="42" 
                            Content="&#xeb4e;">
                        <Button.Effect>
                            <DropShadowEffect Direction="320" BlurRadius="6" ShadowDepth="1" Color="Red" Opacity="1"></DropShadowEffect>
                        </Button.Effect>
                    </Button>
                    <Button Style="{StaticResource CopyButton}" 
                            Width="42" 
                            Height="42" 
                            Margin="0 10"
                            FontSize="24"
                            Content="&#xeb4e;"/>
                    <Button Style="{StaticResource CopyButton}"  
                            FontSize="24"
                            Width="42" 
                            Height="42" 
                            Content="&#xeb4e;"/>
                </StackPanel>
                <!-- 图片 -->
                <Image Margin="0 20" Source="/Assets/Images/CarEX30.png"/>

            </Grid>
            

        </Grid>
        <!-- 底部栏 -->
        <Grid Grid.Row="2" Margin="0 0 0 10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition Width="50"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition Width="50"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition Width="50"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="1"
                    Background="{DynamicResource NormalBrush}"
                    CornerRadius="24"
                    Height="250"
                    VerticalAlignment="Bottom">
                <StackPanel Margin="32">
                    <TextBlock Text="Theme"
                               FontFamily="{StaticResource HOS_Medium}"
                               FontSize="24"
                               FontWeight="Bold"/>
                    <TextBlock Text="Car Simply Introduction"
                               FontFamily="{StaticResource HOS_Medium}"
                               FontSize="12"
                               Foreground="{DynamicResource ChooseBrush}"/>
                    <Border Background="{StaticResource ChooseBrush}"
                            Height="2" Margin="0 5 0 0"/>
                    <UniformGrid Rows="2" Columns="2"
                                 Margin="0 10">
                        <RadioButton Style="{StaticResource ThemeRadioButton}"
                                     Margin="0 0 5 5"
                                     Height="53" 
                                     Content="Light Theme"/>
                        <RadioButton Style="{StaticResource ThemeRadioButton}"
                                     Margin="5 0 0 5"
                                     Height="53" 
                                     Content="Dark Theme"/>
                        <RadioButton Style="{StaticResource ThemeRadioButton}"
                                     Margin="0 5 5 0"
                                     Height="53" 
                                     Content="Light Theme"/>
                        <RadioButton Style="{StaticResource ThemeRadioButton}"
                                     Margin="5 5 0 0"
                                     Height="53" 
                                     Content="Light Theme"/>
                    </UniformGrid>
                </StackPanel>
            </Border>

            <Border Grid.Column="3"
        Background="{DynamicResource NormalBrush}"
        CornerRadius="24"
        Height="250"
        VerticalAlignment="Bottom">
                <StackPanel Margin="32">
                    <TextBlock Text="Theme"
                   FontFamily="{StaticResource HOS_Medium}"
                   FontSize="24"
                   FontWeight="Bold"/>
                    <TextBlock Text="Car Simply Introduction"
                   FontFamily="{StaticResource HOS_Medium}"
                   FontSize="12"
                   Foreground="{DynamicResource ChooseBrush}"/>
                    <Border Background="{StaticResource ChooseBrush}"
                Height="2" Margin="0 5 0 0"/>
                    <UniformGrid Rows="2" Columns="2"
                     Margin="0 10">
                    </UniformGrid>
                </StackPanel>
            </Border>

            <Border Grid.Column="5"
        Background="{DynamicResource NormalBrush}"
        CornerRadius="24"
        Height="250"
        VerticalAlignment="Bottom">
                <StackPanel Margin="32">
                    <TextBlock Text="Theme"
                   FontFamily="{StaticResource HOS_Medium}"
                   FontSize="24"
                   FontWeight="Bold"/>
                    <TextBlock Text="Car Simply Introduction"
                   FontFamily="{StaticResource HOS_Medium}"
                   FontSize="12"
                   Foreground="{DynamicResource ChooseBrush}"/>
                    <Border Background="{StaticResource ChooseBrush}"
                Height="2" Margin="0 5 0 0"/>
                    <UniformGrid Rows="2" Columns="2"
                     Margin="0 10">
                    </UniformGrid>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
